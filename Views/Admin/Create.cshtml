@model PersonDistributionSystem.Models.ProductsModel

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>Add New Item</h1>
        <form method="post">
            <label for="itemName">Item Name:</label>
            <input type="text" id="itemName" name="Item" required> <br />
            <br />
            <label for="itemQuantity">Quantity:</label>
            <input type="text" id="itemQuantity" name="Quantity" required><br />
            <br />
            <label for="itemPrice">Price:</label>
            <input type="number" step="0.01" id="Price" name="Price" required><br />
            <br />
            <button type="submit">Add Item</button>
        </form>
    </div>
    <script src="script.js"></script>
</body>
</html>
