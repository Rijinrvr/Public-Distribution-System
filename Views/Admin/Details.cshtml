@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Database Table Contents</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        h1 {
            margin-bottom: 20px;
        }

        table {
            border-collapse: collapse;
            width: 100%;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #e0e0e0;
        }

        .action-buttons {
            display: flex;
            gap: 5px;
        }

            .action-buttons a {
                padding: 5px 10px;
                background-color: #007bff;
                color: #ffffff;
                text-decoration: none;
                border-radius: 3px;
            }

                .action-buttons a:hover {
                    background-color: #0056b3;
                    color: #ffffff;
                }

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .action-buttons {
            display: flex;
            gap: 5px;
        }


   

        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .action-buttons {
            display: flex;
            gap: 5px;
        }
        .header-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .action-buttons {
            display: flex;
            gap: 5px;
        }

        .create-button {
            padding: 5px 10px;
            background-color: #007bff;
            color: #ffffff;
            text-decoration: none;
            border-radius: 3px;
        }

            .create-button:hover {
                background-color: #0056b3;
                color: #ffffff;
                text-decoration: none;
            }

        .logout-button {
            padding: 5px 10px;
            background-color: #dc3545;
            color: #ffffff;
            text-decoration: none;
            border-radius: 3px;
        }

            .logout-button:hover {
                background-color: #c82333;
                color: #ffffff;
                text-decoration: none;
            }

     
    </style>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.1/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="header-container">
        <h1>Shop Products</h1>
        <div class="action-buttons">
            
            <a href="@Url.Action("Create")" class="create-button">Add Item</a>
            <a href="@Url.Action("Logout")" class="logout-button">Logout</a>
        </div>
    </div>

    <table>
        <thead>
            <tr>

                <th>Item</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Rows.Count; i++)
            {
                <tr>

                    <td>@Model.Rows[i][1]</td>
                    <td>@Model.Rows[i][2]</td>
                    <td>@Model.Rows[i][3]</td>
                    <td class="action-buttons">
                        <a href="@Url.Action("Edit", new { id = Model.Rows[i][0] })" class="btn btn-primary edit-button" data-id="@Model.Rows[i][0]">Edit</a>

                        <a href="#" class="btn btn-danger" data-toggle="modal" data-target="#deleteModal-@i">Delete</a>


                        <div class="modal fade" id="deleteModal-@i" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="deleteModalLabel">Delete Confirmation</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to delete this item : @Model.Rows[i][1]?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <a href="@Url.Action("Delete", new { Id = Model.Rows[i][0] })" class="btn btn-danger">Delete</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
<script>
    $(document).ready(function () {
        
        $(".edit-button").click(function (e) {
            e.preventDefault();
            var productId = $(this).data("id");
            
            window.location.href = "Edit/" + productId;
            console.log(productId);
        });
    });
</script>

</html>
