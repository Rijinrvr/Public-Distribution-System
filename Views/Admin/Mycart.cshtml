@model System.Data.DataTable

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="styles.css"> 
    <style>
        .buy-button {
            padding: 5px 10px;
            background-color: #dc3545;
            color: #ffffff;
            text-decoration: none;
            border-radius: 3px;
        }

            .buy-button:hover {
                background-color: #c82333;
                color: #ffffff;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1>My Cart</h1>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Item</th>
                    <th>Quantity</th>
                    <th>Total Price</th>
                    <th>Actions</th>

                </tr>
            <tbody>
                @for (int i = 0; i < Model.Rows.Count; i++)
                {
                    <tr>
                        <td>@Model.Rows[i][2]</td>
                        <td>@Model.Rows[i][3]</td>
                        <td>@Model.Rows[i][4]</td>
                        <td class="action-buttons">
                            <a href="@Url.Action("RemoveCart", new { id = Model.Rows[i][0] })" class="btn btn-primary edit-button remove-button" data-id="@Model.Rows[i][0]" onclick="return confirm('Are you sure you want to remove this item from your cart?')">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="@Url.Action("CleanCart")" class="buy-button" id="buy-now-button" onclick="return confirm('Are you sure you want to proceed with the purchase?')">Buy Now</a>


        <a href="@Url.Action("Userview")" class="buy-button">Home</a>
    </div>
    <h1>@Html.ViewData["Message"]</h1>

   

</body>
</html>
