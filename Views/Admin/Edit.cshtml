@model PersonDistributionSystem.Models.ProductsModel

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>Edit Item</h1>
        <form method="post">
            @Html.HiddenFor(model => model.Id)

            <div>
                <label for="itemName">Item Name:</label>
                @Html.TextBoxFor(model => model.Item, new { id = "itemName", required = "required" })
            </div>
            <br />
            <div>
                <label for="itemQuantity">Quantity:</label>
                @Html.TextBoxFor(model => model.Quantity, new { id = "itemQuantity", required = "required" })
            </div>
            <br />
            <div>
                <label for="itemPrice">Price:</label>
                @Html.TextBoxFor(model => model.Price, new { id = "itemPrice", type = "number", step = "0.01", required = "required" })
            </div>
            <br />
            <button type="submit">Save</button>
        </form>
    </div>
    <script src="script.js"></script>
</body>
</html>
